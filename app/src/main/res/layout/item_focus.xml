<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_focus_image"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@mipmap/health_guide_woman_selected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_focus_image"
            android:padding="5dp"
            android:id="@+id/tv_focus_name"
            android:textColor="@color/home_bottom_text_checked_color"
            android:textSize="20sp"
            android:text="name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_focus_singname"
            android:layout_toRightOf="@id/iv_focus_image"
            android:layout_below="@id/tv_focus_name"
            android:layout_alignLeft="@id/tv_focus_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="singname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:id="@+id/tv_focus_time"
            android:text="5分钟前"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_focus_listen"
            android:src="@mipmap/icon_listen_lv"
            android:layout_toLeftOf="@+id/tv_focus_singnum"
            android:layout_below="@id/tv_focus_time" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_focus_singnum"
            android:layout_below="@id/tv_focus_time"
            android:layout_alignRight="@id/tv_focus_time"
            android:text="321"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_focus_singname"
            android:layout_alignLeft="@id/tv_focus_singname">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_focus_comment"
                android:src="@mipmap/icon_comments_x32"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_focus_comment"
                android:layout_marginRight="20dp"
                android:text="100"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_focus_flower"
                android:src="@mipmap/flower0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_focus_flower"
                android:text="100"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_focus_image"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/icon_border"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="..来听听我唱的《XX之歌》" />

    </RelativeLayout>


</LinearLayout>