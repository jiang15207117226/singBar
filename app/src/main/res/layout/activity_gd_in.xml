<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ListView
    android:id="@+id/lv_gd_in"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_loading_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/tv_loading_two"
        android:layout_alignRight="@+id/tv_loading_two"
        android:src="@drawable/anim_list_loading"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_loading_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_loading_two"
        android:layout_centerHorizontal="true"
        android:textColor="@color/home_bottom_text_checked_color"
        android:text="loading..."/>
    </RelativeLayout>
</LinearLayout>